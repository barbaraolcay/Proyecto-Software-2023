<div class="row text-center justify-content-center">
  <div class="col-md-8">
    <br>
    <div class="box">
      <h1>Nueva Reseña</h1>

      <%= form_with(model: @resena, url: create_resena_path, method: :post) do |form| %>
        <div class="form-group">
          <%= form.label :producto_id, "Seleccione el producto" %>
          <%= form.collection_select :producto_id, Producto.all, :id, :nombre, { prompt: "Seleccionar producto" }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :comentario %>
          <%= form.text_area :comentario, rows: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :calificacion %>
          <%= form.number_field :calificacion, in: 1..7, class: "form-control" %>
        </div>

        <%= form.submit "Crear Reseña", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

