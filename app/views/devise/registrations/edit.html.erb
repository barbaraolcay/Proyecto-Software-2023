<div class="row text-center justify-content-center">
<div class="col">
  <br>
  <div class="box">
<h2>Editar <%= resource_name.to_s.humanize %></h2>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", rows: 5, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br />
  <div class="field">
    <%= f.label :Nueva_contraseña %> <i>(Deja en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", rows: 5, class: "form-control" %>
    <% if @minimum_password_length %>
      
      <em><%= @minimum_password_length %> Caracteres mínimos</em>
    <% end %>
  </div>
  <br />
  <div class="field">
    <%= f.label :Confirmación_nueva_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", rows: 5, class: "form-control" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :actual_contraseña %> <i>(Necesitamos tu actual contraseña para actualizar tus datos)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", rows: 5, class: "form-control" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name, rows: 5, class: "form-control" %>
  </div>

  <br />
  <div class="field">
  <%= f.label :telefono %>
  <%= f.text_field :telefono, class: "form-control" %>
  </div>

  <br />
  <div class="field">
  <%= f.label :Información%><br />
  <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>



  <div class="field">
  <br />
    <%= f.label :Imagen %><br />
    <%= f.file_field :image %>
  </div>


  <br />
  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
<br>
<h3>Cancelar mi cuenta</h3>

<div>¿Insatisfech@? <br><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Atrás", :back %>

<div class="box">
</div>
</div>